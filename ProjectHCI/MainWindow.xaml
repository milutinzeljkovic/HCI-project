<Window x:Class="ProjectHCI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectHCI"
        mc:Ignorable="d"
        
        Title="Spomenici" FontSize="15" Height="700" Width="1225">
    
    <Window.Resources>

        <ControlTemplate x:Key="TextBoxBaseControlTemplate" TargetType="{x:Type TextBoxBase}">
            <Border Background="{TemplateBinding Background}" 
                x:Name="Bd" BorderBrush="Black"
                BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="10">
                <ScrollViewer x:Name="PART_ContentHost"/>
            </Border>
            <ControlTemplate.Triggers>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="{DynamicResource {x:Static SystemColors.ControlBrushKey}}" TargetName="Bd"/>
                    <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"/>
                </Trigger>
                <Trigger Property="Width" Value="Auto">
                    <Setter Property="MinWidth" Value="100"/>
                </Trigger>
                <Trigger Property="Height" Value="Auto">
                    <Setter Property="MinHeight" Value="20"/>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>


        <Style x:Key="fancyButtonStyle" TargetType="Label">
            
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#4288c1"/>
            <Setter Property="FontWeight" Value="Normal"/>
        </Style>

        <Style x:Key="fancyButtonHoverStyle" TargetType="Button"  BasedOn="{StaticResource ResourceKey=fancyButtonStyle}">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect Color="Lavender" Opacity="80" Direction="270" ShadowDepth="10"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
        <BooleanToVisibilityConverter x:Key="Converter" />
    </Window.Resources>
    <DockPanel>
        <Menu DockPanel.Dock ="Top" Height="50px" Background="#2c5e87" BorderBrush="White" BorderThickness="2px" >
            
            <Menu.ItemsPanel>
                <!--Podkontrola koja određuje kako se item-i prikazuju.-->
                <ItemsPanelTemplate>
                    <!-- Specificiramo ne šta je u kontroli nego template koji je formira-->
                    <DockPanel HorizontalAlignment="Stretch"></DockPanel>
                    <!-- Prikazujemo preko Dock Panela koji preuzme sav prostor -->
                </ItemsPanelTemplate>
            </Menu.ItemsPanel>
            <MenuItem Header="_Spomenici" Foreground="White" FontSize="15" Icon="">
                
                <MenuItem Header="_Dodaj spomenik" FontSize="15" Click="Add_Click"></MenuItem>
                <Separator></Separator>
                <MenuItem Header="_Pretrazi spomenike" Click="Search_Click"></MenuItem>
                <Separator></Separator>
                <MenuItem Header="_Mapa spomenika" Click="ShowMap_Click"></MenuItem>
                
            </MenuItem>

            <MenuItem Header="_Help" FontSize="15" HorizontalAlignment="Right">
                <MenuItem Header="_Turtorial" HorizontalAlignment="Center" Click="Turtorial_click"></MenuItem>
            </MenuItem>
            
            
        </Menu>


        <Menu Width="150px" BorderBrush="White" BorderThickness="2px" Background="#4288c1">
            <Menu.ItemsPanel >
                <ItemsPanelTemplate>
                    <VirtualizingStackPanel Orientation="Vertical" />
                </ItemsPanelTemplate>
            </Menu.ItemsPanel>
            <MenuItem Header="_Dodaj spomenik" FontSize="15" Click="Add_Click" Foreground="White" Height="50px"  >
                
            </MenuItem>
            <Separator Width="150px"></Separator>
            <MenuItem Header="_Pretrazi spomenike" FontSize="15" Click="Search_Click" Foreground="White" Height="50px" >
                
            </MenuItem>
            <Separator Width="150px"></Separator>
            <MenuItem Header="_Mapa spomenika" FontSize="15" Click="ShowMap_Click" Foreground="White" Height="50px"></MenuItem>
            <Separator Width="150px"></Separator>

        </Menu>


        <Grid DockPanel.Dock="Bottom" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="100,100,100,100"  >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Border Margin="0,0,5,8"  Padding="5" BorderThickness="2" BorderBrush="#4288c1" Background="White" CornerRadius="10">
                <Label Height="20px" Padding="0px" RenderTransformOrigin="0.727,0.54"  VerticalAlignment="Top">Name:</Label>
            </Border>

            <TextBox Grid.Column="1" Margin="0,0,0,10" BorderThickness="2px" BorderBrush="#4288c1" >
                <TextBox.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="10"/>
                        <Setter Property="BorderBrush" Value="#4288c1"/>
                        <Setter Property="BorderThickness" Value="5px"/>
                    </Style>
                </TextBox.Resources>
            </TextBox>
            <Label Grid.Row="1" Style="{StaticResource ResourceKey=fancyButtonStyle}">E-mail:</Label>
            <TextBox Grid.Row="1" Grid.Column="1" Margin="0,0,0,10"  />
            <Label Grid.Row="2" Style="{StaticResource ResourceKey=fancyButtonStyle}">Comment:</Label>
            <TextBox Grid.Row="2" Grid.Column="1" Margin="0,0,0,10" />
            <Label Grid.Row="3" Style="{StaticResource ResourceKey=fancyButtonStyle}">Comment:</Label>
            <TextBox Grid.Row="3" Grid.Column="1" Margin="0,0,0,10" />
            <Label Grid.Row="4" Style="{StaticResource ResourceKey=fancyButtonStyle}">Comment:</Label>
            <TextBox Grid.Row="4" Grid.Column="1" Margin="0,0,0,10" />
            <Label Grid.Row="4" Style="{StaticResource ResourceKey=fancyButtonStyle}">Comment:</Label>
            <TextBox Grid.Row="4" Grid.Column="1" Margin="0,0,0,10" />
        </Grid>
        
    </DockPanel>
</Window>
