                                <Setter Property="CornerRadius" Value="10"/>
                                <Setter Property="BorderBrush" Value="#4288c1"/>
                                <Setter Property="BorderThickness" Value="5px"/>
                            </Style>
                        </TextBox.Resources>
                    </TextBox>
                    <TextBox Grid.Column="1" Grid.Row="4" Text="{Binding Path=Unesco}"  BorderThickness="2px" BorderBrush="#4288c1" Height="30px" Width="300px" Margin="-20,0,99.4,1.2">
                        <TextBox.Resources>

                            <Style TargetType="{x:Type Border}">

                                <Setter Property="CornerRadius" Value="10"/>
                                <Setter Property="BorderBrush" Value="#4288c1"/>
                                <Setter Property="BorderThickness" Value="5px"/>
                            </Style>
                        </TextBox.Resources>
                    </TextBox>



                </Grid>

            </Grid>



        </DockPanel>


