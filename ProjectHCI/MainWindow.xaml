                            <Style TargetType="{x:Type Border}">

                                <Setter Property="CornerRadius" Value="10"/>
                                <Setter Property="BorderBrush" Value="#4288c1"/>
                                <Setter Property="BorderThickness" Value="5px"/>
                            </Style>
                        </TextBox.Resources>
                    </TextBox>
                    <TextBox Grid.Column="1" Grid.Row="1" Text="{Binding Path=Opis}" AcceptsReturn="True" TextWrapping="Wrap"  BorderThickness="2px" BorderBrush="#4288c1" Height="70px" Width="300px" Margin="-20,0,99.4,1.2">
                        <TextBox.Resources>

                            <Style TargetType="{x:Type Border}">

                                <Setter Property="CornerRadius" Value="10"/>
                                <Setter Property="BorderBrush" Value="#4288c1"/>
                                <Setter Property="BorderThickness" Value="5px"/>
                            </Style>
                        </TextBox.Resources>
                    </TextBox>
                    <TextBox Grid.Column="1" Grid.Row="2" Text="{Binding Path=Era}"  BorderThickness="2px" BorderBrush="#4288c1" Height="30px" Width="300px" Margin="-20,0,99.4,1.2">
                        <TextBox.Resources>

                            <Style TargetType="{x:Type Border}">

                                <Setter Property="CornerRadius" Value="10"/>
                                <Setter Property="BorderBrush" Value="#4288c1"/>
                                <Setter Property="BorderThickness" Value="5px"/>
                            </Style>
                        </TextBox.Resources>
