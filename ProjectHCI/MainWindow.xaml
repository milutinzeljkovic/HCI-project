                    <TextBlock Grid.Column="0" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">Opis:</TextBlock>
                    <TextBlock Grid.Column="0" Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center">Era:</TextBlock>
                    <TextBlock Grid.Column="0" Grid.Row="3" HorizontalAlignment="Center" VerticalAlignment="Center">Oznaka:</TextBlock>
                    <TextBlock Grid.Column="0" Grid.Row="4" HorizontalAlignment="Center" VerticalAlignment="Center">Unesco:</TextBlock>


                    <TextBox Grid.Column="1" Grid.Row="0" Text="{Binding Path=Ime}"   BorderThickness="2px" BorderBrush="#4288c1" Height="30px" Width="300px" Margin="-20,0,99.4,1.2">
